<h1> <%= @cocktail.name %> </h1>

<p>Ingredients</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li> <%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'Delete', dose_path(dose), method: :delete, data: {confirm: "Are you sure ?"} %>
  </li>
  <% end %>
</ul>


<%= link_to 'Add a dose for this cocktail', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>

<%= link_to 'See all cocktails', cocktails_path, class: "btn btn-primary" %>
